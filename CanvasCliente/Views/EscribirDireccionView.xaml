<Window x:Class="CanvasCliente.Views.EscribirDireccionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasCliente.Views"
        mc:Ignorable="d"
        Title="EscribirDireccionView" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://cdn.create.vista.com/api/media/small/119990728/stock-photo-abstract-background-design"></ImageBrush>
    </Window.Background>
    <StackPanel>
        <StackPanel>
            <TextBlock FontSize="30" Foreground="White" FontFamily="Impact" HorizontalAlignment="Center">Escribe la ip del servidor</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock Margin="10" Foreground="White" FontSize="20">
                Direccion Ipv4
            </TextBlock>
            <TextBlock Margin="10" Background="White"></TextBlock>
            <Button BorderBrush="White" BorderThickness="1" Background="BlueViolet" FontSize="20" Margin="20" Width="100" Height="30">
                Elegir
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
